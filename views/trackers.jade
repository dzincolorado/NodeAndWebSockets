extends layout

block append head
		
block content

	div(class="alert alert-info", id="wrpRunningAvg") Average:
		div(class="rightColumn", id="wrpAverage")

	div(style="width:200px;float:right;position:absolute;left:400px;top:32px")
		div(class="render", id="categoryChart", style="height:200px")
	div(style="width:200px;float:right;position:absolute;left:400px;top:242px")
		div(class="render", id="emotionChart", style="height:200px")
		
	ol(data-bind="foreach: trackers", class="ui-selectable", id="olTrackers")
		//- li(class="ui-widget-content")
		li
			div(data-bind="attr: {id: 'slider-range' + trackerId}")
			div(data-bind="attr: {id: 'txtMinutes' + trackerId}, text:label")
			div(data-bind="attr: {id: 'wrpAddDate' + trackerId}, text:formattedDate", class="trackerCaptionDate")
	
	div
		button(id="btnTrackAnother", class="btn btn-primary") Track Activity
		
	div(id="wrpTrackAnother", title="Track Activity")
		div(id="slider-range")
		div(id="txtMinutes", class="trackerCaption-happy")
		div(class="sectionSplitter")
		
		label(for="ddlCategory") Category:
			select(id="ddlCategory", data-bind="options: categories, optionsText: 'name', optionsValue: 'name'", class="rightColumn")
		label(for="txtActivity") Activity:
			input(type="text", id="txtActivity", class="rightColumn", maxLength="30")
		div(class="divider")
		label(for="ddlEmotion") Emotional State: 
			select(id="ddlEmotion", data-bind="options: emotionValues, optionsText: 'name', optionsValue: 'value'", class="rightColumn")
			div(class="wrpButton")
				button(id="btnTrackNew", class="btn btn-primary") Start tracking
				